doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="VRNas - provider of virtual reality services")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    link(rel="apple-touch-icon", sizes="180x180", href="favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="favicon/favicon-16x16.png")
    link(rel="manifest", href="favicon/site.webmanifest", crossorigin="use-credentials")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#19b5f1")
    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="theme-color", content="#4a4a58")
    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/ChakraPetch-Light.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ChakraPetch-Regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ChakraPetch-Medium.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ChakraPetch-SemiBold.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/ChakraPetch-Bold.woff2", as="font", crossorigin="anonymous")
    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="VRNas")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="")
      //- Введите необходимый тип
      meta(property="og:type", content="webpage")
      //- Введите адрес сайта
      meta(property="og:url", content="")
      //- Введите описание
      meta(property="og:description", content="Virtual reality service")

    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (wrapperMods === "wrapper--common")
        +icon("wave", 736, 353, true).wrapper__bg-wave.wrapper__bg-wave--upper
        +icon("wave", 736, 353, true).wrapper__bg-wave.wrapper__bg-wave--lower

      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
