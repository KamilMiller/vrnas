      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +our-service(homePageOurServiceData, serviceList)
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +advantages(homePageAdvantagesData)
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +video()
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +pricing()
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +partners()
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +subscribe-form()

