block variables
  - const title = "VRNas - Homepage" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = "wrapper--common"
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
