extends ../components/base/layout

block variables
  - const title = "VRNas - About Us" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = "wrapper--middle-grid"
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "about-us.html"
  -
    const breadcrumbsData = [
      {
        text: "Home",
        href: "index.html",
      },
      {
        text: "About us",
        href: false,
      },
    ]

block main
  main
    +page-title("About Us", breadcrumbsData)
    .page-section.page-section--top(data-top-block)
      +about-us(aboutUsPageAboutData, true)
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +our-service(aboutUsOurServiceData, shortServiceList)
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +advantages(aboutUsPageAdvantagesData)
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +team()
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +partners()
    .page-section(data-section-animation, data-start="top bottom", data-end="top center")
      .page-section__inner(data-animation="y: 0", data-animation-direction="to")
        +subscribe-box()

block modals
